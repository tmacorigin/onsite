<?xml version="1.0" encoding="utf-8"?>
<com.tmac.onsite.view.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/send_pull_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	>

    <include layout="@layout/refresh_head"/>

    <com.tmac.onsite.view.PullableListView 
        android:id="@+id/send_pull_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/divider_height"
        android:listSelector="@android:color/transparent"
        />
    
    <include layout="@layout/load_more"/>
    
</com.tmac.onsite.view.PullToRefreshLayout>
