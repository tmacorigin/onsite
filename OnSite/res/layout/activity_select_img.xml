<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_detail_background" >
    
	 <RelativeLayout 
        android:id="@+id/select_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/layout_title_bg">
        
        <ImageView 
            android:id="@+id/select_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_white"
            android:layout_centerVertical="true"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_img"
            android:textColor="@color/white"
            android:textSize="@dimen/detail_task_text"
            android:layout_centerInParent="true"/>
        
        <Button 
            android:id="@+id/select_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload"
            android:textSize="@dimen/detail_task_text"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        
    </RelativeLayout>
    
    
	<GridView 
	    android:id="@+id/select_gridview"
	    android:layout_below="@+id/select_layout_title"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:numColumns="3"
	    android:horizontalSpacing="5dp"
	    android:verticalSpacing="5dp"
	    android:stretchMode="columnWidth"
	    /> 
	 
	<ImageView 
	    android:id="@+id/camera_iv"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scaleType="fitXY"/>
	
	<ImageView 
	    android:id="@+id/cancel_iv"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/cancel_img"
	    android:layout_margin="10dp"
	    android:visibility="gone"/>

	<ImageView 
	    android:id="@+id/select_iv"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/select_img"
	    android:layout_margin="10dp"
	    android:layout_alignParentRight="true"
	    android:visibility="gone"/>
		 
</RelativeLayout>
